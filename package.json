{
    "name": "preact-typescript-micro",
    "description": "Minimalistic, high-powered boilerplate",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "check:types": "tsc",
        "build:dev": "webpack-dev-server --config-name dev --history-api-fallback",
        "build:prod": "webpack --config-name prod",
        "start": "run-s build:dev",
        "build": "run-s check:types build:prod",
        "lint:scripts": "eslint ./src/**/*.{tsx,ts}",
        "lint:styles": "stylelint ./src/**/*.styles.{tsx,ts}",
        "test": "jest",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook"
    },
    "husky": {
        "hooks": {
            "pre-commit": "run-s check:types lint:scripts lint:styles"
        }
    },
    "devDependencies": {
        "@babel/core": "^7.6.4",
        "@babel/plugin-proposal-class-properties": "^7.5.5",
        "@babel/plugin-transform-react-jsx": "^7.3.0",
        "@babel/preset-env": "^7.8.3",
        "@babel/preset-modules": "^0.1.1",
        "@babel/preset-typescript": "^7.6.0",
        "@storybook/addon-actions": "^5.2.3",
        "@storybook/addon-info": "^5.2.3",
        "@storybook/addon-links": "^5.2.3",
        "@storybook/addons": "^5.2.3",
        "@storybook/preact": "^5.2.3",
        "@testing-library/jest-dom": "^4.1.1",
        "@testing-library/preact": "^1.0.2",
        "@types/jest": "^24.0.18",
        "@types/node": "^12.7.11",
        "@types/prop-types": "^15.7.3",
        "@typescript-eslint/eslint-plugin": "^2.3.3",
        "@typescript-eslint/parser": "^2.3.3",
        "babel-jest": "^24.9.0",
        "babel-loader": "^8.0.6",
        "clean-webpack-plugin": "^3.0.0",
        "eslint": "^6.5.1",
        "eslint-config-prettier": "^6.4.0",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-react": "^7.16.0",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^3.0.8",
        "jest": "^24.9.0",
        "npm-run-all": "^4.1.5",
        "offline-plugin": "^5.0.7",
        "plop": "^2.5.2",
        "prerender-spa-plugin": "^3.4.0",
        "prettier": "^1.18.2",
        "pretty-quick": "^1.11.1",
        "react-docgen-typescript-loader": "^3.3.0",
        "stylelint": "^11.0.0",
        "stylelint-config-standard": "^19.0.0",
        "typescript": "^3.6.3",
        "webpack": "^4.41.0",
        "webpack-cli": "^3.3.9",
        "webpack-dev-server": "^3.8.2",
        "webpack-pwa-manifest": "^4.1.1"
    },
    "dependencies": {
        "@preact-hooks/unistore": "^1.0.9",
        "goober": "^1.5.0",
        "preact": "^10.0.0",
        "prop-types": "^15.7.2",
        "unistore": "^3.4.1",
        "wouter-preact": "^2.3.1"
    }
}
